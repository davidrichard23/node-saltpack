{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TypeScript",
            "type": "shell",
            "command": "npx tsc --watch",
            "group": "build",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "/usr/local/bin:${env:PATH}"
                }
            },
            "problemMatcher": []
        }
    ]
}
